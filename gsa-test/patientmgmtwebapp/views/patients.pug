                    <li class="nav-item active" style="border-left: white 1px solid; padding-left: 2em; padding-right: 2em;">
                        <a class="nav-link" href="/patient/list">Patients</a>
                    </li>
                </ul>
                <form class="form-inline my-2 my-lg-0">
                    <span style="color: #ffffff; margin-right: 0em;" >Welcome, Guest</span>
                </form>
            </div>
        </nav>    
        <!-- End Navbar -->
    </header>

    <!-- Start main-content -->
    <main>
        <div style="padding-top: 1em;" class="container">
            <!-- main content here -->
            <h3>
                ALL Patients List
            </h3>
            <a class="btn btn-primary btn-inline" href="/patient/new">Register a new Patient</a>
            <hr>
            <div style="margin-top: 1em;" id="divPatientsList" style="font-size: 1em">
                <table class="table table-striped" id="tbPatients">
                    <thead>
                        <tr>
                            <th scope="col">Patient ID No</th>
                            <th scope="col">Full Name</th>
                            <th scope="col">Email</th>
                            <th scope="col">Phone Number</th>
                            <th scope="col">Date of birth</th>
                            <th scope="col">Out-patient?</th>
                        </tr>
                    </thead>
                    <tbody>
                        for patient in patients
                            tr
                            td #{patient.patientIdNumber}
                            td #{patient.fullName}
                            td #{patient.emailAddress}
                            td #{patient.contactPhoneNumber}
                            td #{patient.dateOfBirth}
                            td #{patient.isAnOutPatient}
                    </tbody>
                </table>
            </div>
        </div>
    </main>
